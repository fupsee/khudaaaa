<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/loginlogo"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"/>

    <TextView
        android:id="@+id/textv"
        android:layout_width="109dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Login Page" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="  Email"
        android:drawableTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:background="@drawable/resetbutton"
        />

    <EditText
        android:id="@+id/passWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableTint="@color/white"
        android:ems="10"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:hint="  Password"
        android:inputType="numberPassword"
        android:background="@drawable/resetbutton"/>
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Remeber Me?"
        android:onClick="rem"
        android:textColor="@color/sweet"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#d96262"
        android:layout_margin="20dp"
        android:text="login" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/button1"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:onClick="google"
            android:layout_marginLeft="100dp"
            android:background="@drawable/google"
            android:backgroundTint="@color/sweet"
            android:layout_gravity="center"
            android:padding="8dp"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:onClick="facebook"
            android:background="@drawable/facebook"
            android:backgroundTint="@color/sweet"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/twitter"
            android:backgroundTint="@color/sweet"
            android:onClick="twitter"
            android:padding="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Not a user?SignUP"
        android:textColor="@color/sweet"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
</LinearLayout>